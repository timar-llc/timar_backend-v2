{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "controllerFileNameSuffix": ".controller.ts",
          "dtoFileNameSuffix": [".dto.ts", ".entity.ts"]
        }
      }
    ],
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ],

    "builder": "swc",
    "typeCheck": true
  }
}
